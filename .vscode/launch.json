    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "cwd": "${workspaceRoot}/client",
            "outputCapture": "std",
            "console": "externalTerminal",
            "skipFiles": ["<node_internals>/**"],
            "linux": {
                "protocol": "inspector"
            }
        },
        {
            "name": "Service",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["server.js"],
            "cwd": "${workspaceRoot}/service",
            "outputCapture": "std",
            "console": "externalTerminal",
            "skipFiles": ["<node_internals>/**"],
            "linux": {
                "protocol": "inspector"
            }
        }
    ]
}